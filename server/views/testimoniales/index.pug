extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5=pagina

        .row
            .col-md-12
                blockquote.text-center Lee Sobre Nuestros Clientes y sus Experiencias
                .row.testimoniales
                    each testimonial in testimoniales
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body
                                    blockquote.blockquote
                                    p.mb-0
                                        | #{testimonial.mensaje}
                                    footer.blockquote-footer
                                        | #{testimonial.nombre}     
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", type="text", class="form-control", name="nombre" placeholder="Tu Nombre", value=nombre)
                            .form-group
                                label(for="email") Correo Electrónico
                                input(id="email", type="text", class="form-control", name="correo" placeholder="Tu Correo Electrónico", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje",rows="3", placeholder="Tu Mensaje",class="form-control")=mensaje
                            input.btn.btn-success.btn-lg.btn-block(type="submit" value="AGREGAR")  